{
  "version": 2,
  "builds": [
    { "src": "api/index.js", "use": "@vercel/node" },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build",
        "buildCommand": "npm run build"
      }
    }
  ],
  "routes": [
    {
      "src": "/favicon.ico",
      "dest": "build/favicon.ico"
    },
    { "src": "/api/(.*)", "dest": "api/index.js" },
    { "src": "/(.*)", "dest": "build/index.html" }
  ]
}
